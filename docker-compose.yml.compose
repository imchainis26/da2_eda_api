version: '3.9'

services:
  back:
    build: ./back
    container_name: backend
    environment:
      DB_HOST: postgres
      DB_PORT: 5432
      DB_NAME: citypass_logs
      DB_USER: citypass
      DB_PASSWORD: citypass
    ports:
      - "5000:5000"

  front:
    build: ./front
    container_name: frontend
    ports:
      - "5500:80"
    depends_on:
      - backend

volumes:
  pgdata:
